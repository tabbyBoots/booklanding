@{
    ViewData["Title"] = "忘記密碼確認";
    Layout = "_BookLandingAuthLayout";
}

<!-- Forgot Password Confirmation -->
<div class="auth-form-container" data-aos="fade-up">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon" style="background: linear-gradient(135deg, #28a745, color-mix(in srgb, #28a745, transparent 20%));">
                <i class="bi bi-check-circle"></i>
            </div>
            <h2 class="auth-title">請求已提交</h2>
            <p class="auth-subtitle">密碼重設連結已發送</p>
        </div>

        <div class="auth-body text-center">
            <div class="success-message mb-4">
                <i class="bi bi-envelope-check display-4 text-success mb-3"></i>
                <p class="mb-3">@ViewBag.Message</p>
                <p class="text-muted">請檢查您的電子郵件收件匣（也請檢查垃圾郵件資料夾）。</p>
            </div>

            <div class="auth-actions">
                <a asp-action="Login" asp-controller="Account" class="btn auth-btn w-100 mb-3">
                    <i class="bi bi-arrow-left me-2"></i>返回登入頁面
                </a>
                <a asp-action="ForgotPassword" asp-controller="Account" class="auth-link">
                    <i class="bi bi-arrow-clockwise me-2"></i>重新發送郵件
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Additional Styles -->
<style>
    .success-message {
        padding: 20px;
        background-color: color-mix(in srgb, #28a745, transparent 95%);
        border-radius: 10px;
        border: 1px solid color-mix(in srgb, #28a745, transparent 80%);
    }

    .auth-actions {
        margin-top: 20px;
    }
</style>
