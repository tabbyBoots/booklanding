@model mvcDapper3.Models.ViewModel.vmResetPassword
@{
    ViewData["Title"] = "重設密碼";
    Layout = "_BookLandingAuthLayout";
}

<!-- Reset Password Form -->
<div class="auth-form-container" data-aos="fade-up">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            <h2 class="auth-title">重設您的密碼</h2>
            <p class="auth-subtitle">請輸入您的新密碼</p>
        </div>

        <div class="auth-body">
            <form asp-controller="Account" asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                <input type="hidden" asp-for="Token" />
                
                <!-- New Password Field -->
                <div class="form-group mb-4">
                    <label asp-for="Password" class="form-label">
                        <i class="bi bi-lock me-2"></i>新密碼
                    </label>
                    <div class="password-input-container">
                        <input asp-for="Password" type="password" class="form-control auth-input" placeholder="請輸入新密碼" />
                        <button type="button" class="password-toggle" onclick="togglePassword('Password')">
                            <i class="bi bi-eye" id="Password-toggle-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Confirm Password Field -->
                <div class="form-group mb-4">
                    <label asp-for="ConfirmPassword" class="form-label">
                        <i class="bi bi-lock-fill me-2"></i>確認新密碼
                    </label>
                    <div class="password-input-container">
                        <input asp-for="ConfirmPassword" type="password" class="form-control auth-input" placeholder="請再次輸入新密碼" />
                        <button type="button" class="password-toggle" onclick="togglePassword('ConfirmPassword')">
                            <i class="bi bi-eye" id="ConfirmPassword-toggle-icon"></i>
                        </button>
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn auth-btn w-100 mb-4">
                    <i class="bi bi-check-circle me-2"></i>重設密碼
                </button>
            </form>

            <!-- Back to Login -->
            <div class="auth-links text-center">
                <a asp-action="Login" class="auth-link">
                    <i class="bi bi-arrow-left me-2"></i>返回登入
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Additional Styles -->
<style>
    .password-input-container {
        position: relative;
    }

    .password-toggle {
        position: absolute;
        right: 12px;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        color: var(--default-color);
        cursor: pointer;
        padding: 4px;
        transition: all 0.3s ease;
    }

    .password-toggle:hover {
        color: var(--accent-color);
    }

    .alert-danger {
        background-color: color-mix(in srgb, #dc3545, transparent 90%);
        border: 1px solid color-mix(in srgb, #dc3545, transparent 70%);
        color: #dc3545;
        border-radius: 8px;
        padding: 12px 16px;
        font-family: var(--default-font);
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        function togglePassword(fieldName) {
            const passwordField = document.getElementById(fieldName);
            const toggleIcon = document.getElementById(fieldName + '-toggle-icon');
            
            if (passwordField.type === 'password') {
                passwordField.type = 'text';
                toggleIcon.className = 'bi bi-eye-slash';
            } else {
                passwordField.type = 'password';
                toggleIcon.className = 'bi bi-eye';
            }
        }
    </script>
}
