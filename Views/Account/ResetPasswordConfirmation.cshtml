@{
    ViewData["Title"] = "密碼重設成功";
    Layout = "_BookLandingAuthLayout";
}

<!-- Reset Password Confirmation -->
<div class="auth-form-container" data-aos="fade-up">
    <div class="auth-card">
        <div class="auth-header">
            <div class="auth-icon" style="background: linear-gradient(135deg, #28a745, color-mix(in srgb, #28a745, transparent 20%));">
                <i class="bi bi-check-circle"></i>
            </div>
            <h2 class="auth-title">密碼已重設</h2>
            <p class="auth-subtitle">您的密碼已成功更新</p>
        </div>

        <div class="auth-body text-center">
            <div class="success-message mb-4">
                <i class="bi bi-shield-check display-4 text-success mb-3"></i>
                <p class="mb-3">@ViewBag.Message</p>
                <p class="text-muted">您現在可以使用新密碼登入系統。</p>
            </div>

            <div class="auth-actions">
                <a asp-action="Login" asp-controller="Account" class="btn auth-btn w-100 mb-3">
                    <i class="bi bi-box-arrow-in-right me-2"></i>前往登入頁面
                </a>
                <div class="text-center">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        為了您的帳戶安全，請妥善保管您的新密碼
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Additional Styles -->
<style>
    .success-message {
        padding: 20px;
        background-color: color-mix(in srgb, #28a745, transparent 95%);
        border-radius: 10px;
        border: 1px solid color-mix(in srgb, #28a745, transparent 80%);
    }

    .auth-actions {
        margin-top: 20px;
    }

    .auth-actions small {
        font-size: 0.85rem;
        line-height: 1.4;
    }
</style>
