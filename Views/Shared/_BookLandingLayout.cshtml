<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>@ViewData["Title"] - BookLanding</title>
  <meta name="description" content="">
  <meta name="keywords" content="">

  <!-- Favicons -->
  <link href="~/images/booklanding/favicon.png" rel="icon">
  <link href="~/images/booklanding/apple-touch-icon.png" rel="apple-touch-icon">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Roboto+Slab:wght@100;200;300;400;500;600;700;800;900&family=Merriweather:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900&display=swap" rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" rel="stylesheet">
  <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
  <link href="https://unpkg.com/swiper@8/swiper-bundle.min.css" rel="stylesheet">

  <!-- Main CSS File -->
  <link href="~/css/booklanding/main.css" rel="stylesheet">

  <!-- Custom styles for login/register buttons -->
  <style>
    .btn-login, .btn-register {
      background-color: var(--accent-color);
      color: var(--contrast-color);
      padding: 6px 16px;
      border-radius: 20px;
      font-weight: 500;
      font-size: 14px;
      transition: all 0.3s ease;
      text-decoration: none;
      display: inline-block;
      white-space: nowrap;
    }
    
    .btn-login:hover, .btn-register:hover {
      background-color: color-mix(in srgb, var(--accent-color), transparent 20%);
      color: var(--contrast-color);
      transform: translateY(-2px);
      text-decoration: none;
    }
    
    .btn-register {
      background-color: transparent;
      border: 2px solid var(--accent-color);
      color: var(--accent-color);
    }
    
    .btn-register:hover {
      background-color: var(--accent-color);
      color: var(--contrast-color);
    }
    
    /* Auth buttons container spacing */
    .auth-buttons {
      margin-right: 15px;
      display: flex;
      gap: 8px;
      align-items: center;
    }
    
    /* Ensure proper spacing for hamburger menu */
    .mobile-nav-toggle {
      margin-left: 10px;
    }
    
    /* Responsive behavior for auth buttons - hide only on small screens */
    @@media (max-width: 767px) {
      .auth-buttons {
        display: none !important;
      }
      
      /* Show auth menu items in hamburger menu when desktop buttons are hidden */
      .auth-menu-item {
        display: list-item !important;
      }
    }
    
    /* Hide member dropdown on small screens and show in hamburger menu */
    @@media (max-width: 768px) {
      .dropdown.me-3 {
        display: none !important;
      }
      
      /* Show auth menu items in hamburger menu on small screens */
      .auth-menu-item {
        display: list-item !important;
      }
    }
    
    /* For larger screens, make buttons more compact */
    @@media (min-width: 769px) {
      .btn-login, .btn-register {
        margin-right: 50px;
        padding: 4px 12px;
        font-size: 13px;
      }
      
      .auth-buttons {
        margin-right: 50px;
        gap: 6px;
      }
    }
    
    /* Hide auth menu items on all screens 768px and above */
    @@media (min-width: 768px) {
      .auth-menu-item {
        display: none !important;
      }
      
      /* For screens larger than 768px, ensure member dropdown has proper spacing */
      .dropdown.me-3 {
        margin-right: 50px !important;
      }
    }
    
    /* Style logout button in hamburger menu to match other menu items */
    .auth-menu-item form {
      margin: 0;
      padding: 0;
      width: 100%;
    }
    
    .auth-menu-item button {
      display: block;
      width: 100%;
      padding: 0;
      margin: 0;
      border: none;
      background: none;
      color: inherit;
      text-decoration: none;
      font-size: inherit;
      font-family: inherit;
      font-weight: inherit;
      line-height: inherit;
      text-align: left;
      cursor: pointer;
    }
    
    .auth-menu-item button:hover {
      color: inherit;
      text-decoration: none;
      background: none;
    }
  </style>

  @await RenderSectionAsync("Styles", required: false)
</head>

<body class="index-page">

  <header id="header" class="header d-flex align-items-center position-relative">
    <div class="container-fluid position-relative d-flex align-items-center justify-content-between">

      <a href="@Url.Action("Index", "Home")" class="logo d-flex align-items-center me-auto me-xl-0">
        <!-- Uncomment the line below if you also wish to use an image logo -->
        <!-- <img src="~/images/booklanding/logo.webp" alt=""> -->

        <!-- Uncomment the line below if you also wish to use a text logo -->
        <h1 class="sitename">BookLanding</h1>
      </a>

      <!-- Login/Register buttons positioned next to hamburger -->
      <div class="d-flex align-items-center">
        @if (User.Identity.IsAuthenticated)
        {
          @if (User.IsInRole("Member"))
          {
            <!-- Member user dropdown -->
            <div class="dropdown me-3">
              <a href="#" class="d-flex align-items-center dropdown-toggle" data-bs-toggle="dropdown">
                <img src="https://github.com/mdo.png" alt="user" width="30" height="30" class="rounded-circle me-2">
                <span>@User.Identity.Name</span>
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">Profile</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">My Orders</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                  <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item border-0 bg-transparent">Logout</button>
                  </form>
                </li>
              </ul>
            </div>
          }
        }
        else
        {
          <!-- Guest user buttons -->
          <div class="auth-buttons me-3">
            <a href="@Url.Action("Login", "Account")" class="btn-login me-2">Login</a>
            <a href="@Url.Action("Register", "Account")" class="btn-register" style="">Register</a>
          </div>
        }

        <nav id="navmenu" class="navmenu">
          <ul>
            <li><a href="#hero" class="active">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#features">Features</a></li>
            <li><a href="#excerpt">Read an Excerpt</a></li>
            <li><a href="#about-author">About the Author</a></li>
            <li><a href="#testimonials">Testimonials</a></li>
            <li><a href="#purchase">Purchase</a></li>
            <li><a href="#faq">F.A.Q.</a></li>
            <li><a href="#contact">Contact</a></li>
            @if (!User.Identity.IsAuthenticated)
            {
              <!-- Auth buttons - show when desktop buttons are hidden -->
              <li style="display: none;" class="auth-menu-item"><a href="@Url.Action("Login", "Account")" class="btn-login">Login</a></li>
              <li style="display: none;" class="auth-menu-item"><a href="@Url.Action("Register", "Account")" class="btn-register">Register</a></li>
            }
            else if (User.IsInRole("Member"))
            {
              <!-- User menu - show when desktop dropdown is hidden -->
              <li style="display: none;" class="auth-menu-item"><a href="@Url.Action("Index", "Home")">Profile</a></li>
              <li style="display: none;" class="auth-menu-item"><a href="@Url.Action("Index", "Home")">My Orders</a></li>
              <li style="display: none;" class="auth-menu-item">
                <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline w-100">
                  @Html.AntiForgeryToken()
                  <button type="submit">Logout</button>
                </form>
              </li>
            }
          </ul>
          <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
        </nav>
      </div>

    </div>
  </header>

  <main class="main">
    @RenderBody()
  </main>

  <footer id="footer" class="footer">
    <div class="container">
      <h3 class="sitename">BookLanding</h3>
      <p>Et aut eum quis fuga eos sunt ipsa nihil. Labore corporis magni eligendi fuga maxime saepe commodi placeat.</p>
      <div class="social-links d-flex justify-content-center">
        <a href=""><i class="bi bi-twitter-x"></i></a>
        <a href=""><i class="bi bi-facebook"></i></a>
        <a href=""><i class="bi bi-instagram"></i></a>
        <a href=""><i class="bi bi-skype"></i></a>
        <a href=""><i class="bi bi-linkedin"></i></a>
      </div>
      <div class="container">
        <div class="copyright">
          <span>Copyright</span> <strong class="px-1 sitename">BookLanding</strong> <span>All Rights Reserved</span>
        </div>
        <div class="credits">
          <!-- All the links in the footer should remain intact. -->
          <!-- You can delete the links only if you've purchased the pro version. -->
          <!-- Licensing information: https://bootstrapmade.com/license/ -->
          <!-- Purchase the pro version with working PHP/AJAX contact form: [buy-url] -->
          Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
        </div>
      </div>
    </div>
  </footer>

  <!-- Scroll Top -->
  <a href="#" id="scroll-top" class="scroll-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

  <!-- Preloader -->
  <div id="preloader"></div>

  <!-- Vendor JS Files -->
  <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>
  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
  <script src="https://unpkg.com/swiper@8/swiper-bundle.min.js"></script>

  <!-- Main JS File -->
  <script src="~/js/booklanding/main.js"></script>

  @await RenderSectionAsync("Scripts", required: false)

</body>

</html>
