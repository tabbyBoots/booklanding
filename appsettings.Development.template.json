{
  "ConnectionStrings": {
    "DbConn": "Server={DB_SERVER};Database={DB_NAME};User Id={DB_USER};Password={DB_PASSWORD};TrustServerCertificate=True;Connection Timeout=120",
    "DbConn2": "Server={DB_SERVER};Database={DB_NAME_2};User Id={DB_USER};Password={DB_PASSWORD};TrustServerCertificate=True;Connection Timeout=120",
    "DbConn3": "Server={DB_SERVER};Database={DB_NAME_3};User Id={DB_USER};Password={DB_PASSWORD};TrustServerCertificate=True;Connection Timeout=120",
    "ProductionDbConn": "Server={PROD_DB_SERVER};Database={PROD_DB_NAME};User Id={PROD_DB_USER};Password={PROD_DB_PASSWORD};TrustServerCertificate=True;Connection Timeout=120"
  },
  "Applications": {
    "AppName": "BookLanding",
    "AppVersion": "專業版",
    "Designer": "Your Name",
    "AdminName": "Admin",
    "AdminEmail": "admin@yourdomain.com",
    "DebugMode": "1"
  },
  "JwtSettings": {
    "Issuer": "mvcDapper3",
    "Audience": "mvcDapper3",
    "SignKey": "{JWT_SIGN_KEY}",
    "ExpirationMinutes": 60,
    "ClockSkewSeconds": 30,
    "ValidateIssuer": true,
    "ValidateAudience": false,
    "ValidateLifetime": true,
    "ValidateIssuerSigningKey": true
  },
  "SessionSettings": {
    "IdleTimeoutMinutes": 20,
    "CookieName": "mvcDapper3",
    "SecurePolicy": true,
    "HttpOnly": true,
    "Domain": null,
    "Path": "/"
  },
  "AppSettings": {
    "AppName": "MvcDapper3",
    "Version": "1.0.0",
    "EnableDetailedErrors": true,
    "EnableSwagger": true,
    "MaxFileUploadSizeMB": 10,
    "DefaultPageSize": 10,
    "AllowedFileTypes": [
      ".jpg",
      ".jpeg",
      ".png",
      ".gif",
      ".pdf",
      ".doc",
      ".docx"
    ],
    "BaseUrl": "https://localhost:7890"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information"
    }
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information",
        "Microsoft.AspNetCore": "Information",
        "Microsoft.AspNetCore.Mvc": "Information",
        "Microsoft.AspNetCore.Routing": "Information",
        "Microsoft.AspNetCore.Hosting.lifetime": "Information"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:MM-dd HH:mm:ss} [{Level:w3}] {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "Data/logs/log_.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "restrictedToMinimumLevel": "Information",
          "outputTemplate": "{Timestamp:MM-dd HH:mm:ss} [{Level:w3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Gmail": {
    "UserName": "{GMAIL_USERNAME}",
    "AppPassword": "{GMAIL_APP_PASSWORD}",
    "SenderEmail": "{GMAIL_SENDER_EMAIL}",
    "SenderName": "系統管理員",
    "HostUrl": "smtp.gmail.com",
    "Port": "587",
    "UseSSL": "true"
  },
  "Authentication": {
    "Google": {
      "ClientId": "{GOOGLE_CLIENT_ID}",
      "ClientSecret": "{GOOGLE_CLIENT_SECRET}"
    }
  }
}
